<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <children>
        <Label layoutX="262.0" layoutY="29.0" text="Online Library" />
        <TextField fx:id="username" layoutX="226.0" layoutY="175.0" promptText="Username" onKeyReleased="#keyReleasedProperty" />
        <PasswordField fx:id="password" layoutX="228.0" layoutY="218.0" promptText="password" onKeyReleased="#keyReleasedProperty"/>
        <Button fx:id="buttonLogin" layoutX="276.0" layoutY="266.0" mnemonicParsing="false" onAction="#loginAction" text="Login" />
        <Label layoutX="237.0" layoutY="135.0" text="Hello, good to see you!" />
        <ImageView fitHeight="85.0" fitWidth="149.0" layoutX="225.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true" />
        <Hyperlink fx:id="hyperlinkSignup" layoutX="188.0" layoutY="355.0" onAction="#signupAction" text="Sign in"/>
        <Label layoutX="44.0" layoutY="358.0" text="You dont have an account?" />
        <Label layoutX="230.0" layoutY="358.0" text=" now!" />
    </children>
</AnchorPane>
